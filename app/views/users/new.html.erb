<% subtitle :subtitle %>

<div class="row">
  <div class="span4">
    <h1>Sign up</h1>
    <p>You are signing up for a free StatsFoundry account</p>
  </div>

  <div class="span12">
    <%= render :partial => '/application/flash', :object => flash %>
    <%= form_for @user do |form| %>
      <fieldset>
        <%= render :partial => '/users/form', :object => form %>
      </fieldset>
      <%= buttons "primary" => "Create an account" %>
    <% end %>
  </div>
</div>
